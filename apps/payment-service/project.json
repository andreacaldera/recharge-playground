{
  "name": "payment-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/payment-service/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/payment-service",
        "color": true,
        "command": "sls package"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/payment-service",
        "color": true,
        "command": "sls offline start --reloadHandler --stage=local --lambdaPort 3002 --httpPort 3003"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/payment-service",
        "color": true,
        "command": "sls deploy"
      }
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/payment-service",
        "color": true,
        "command": "sls remove"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/payment-service/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/payment-service/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["stack"]
}
